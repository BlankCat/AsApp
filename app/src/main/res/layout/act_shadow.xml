<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relay_draw_shadow_content"
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:layout_marginTop="26.67dp"
            android:background="@android:color/holo_green_dark"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/relay_draw_shadow_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/title_background"/>

            <TextView
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add Shadow for Single View"
                android:textSize="12sp"
                android:gravity="center"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:layout_marginTop="6.67dp"
            android:layout_marginBottom="6.67dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/relay_draw_shadow_viewgroup"
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#d07784"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Add Shadow for ViewGroup"
                android:textSize="12sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:layout_marginTop="6.67dp"
            android:layout_marginBottom="6.67dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/wrap_shadow_direction_example"
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_green_light">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Change Direction of Shadow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:layout_marginTop="6.67dp"
            android:layout_marginBottom="6.67dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/wrap_shadow_direction_example1"
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_green_light">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Change Direction of Shadow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:layout_marginTop="6.67dp"
            android:layout_marginBottom="6.67dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/wrap_shadow_direction_example2"
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_green_light">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Change Direction of Shadow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:layout_marginTop="6.67dp"
            android:layout_marginBottom="6.67dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/wrap_shadow_direction_example3"
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/holo_green_light">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Change Direction of Shadow" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>